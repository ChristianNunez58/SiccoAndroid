<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Usuario">

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv1"
                android:layout_width="194dp"
                android:layout_height="91dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/txtinfovisible"
                app:layout_constraintEnd_toStartOf="@+id/imv2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                <!--app:srcCompat="@mipmap/ic_launcher_siccos" />-->

            <ImageView
                android:id="@+id/imv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher_fotousuarios" />
        </LinearLayout> <!--Fotos-->

        <TextView
            android:id="@+id/txtinfovisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información visible"
            android:textColor="@color/colorPrimaryText"
            android:layout_marginLeft="5dp"/> <!--InfoVisible-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="Nombre:"
                android:textColor="@color/colorPrimaryText"/>

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:inputType="textPersonName"
                android:text="Elian Javiera Cruz Esquivel"
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"/>

        </LinearLayout> <!--Nombre-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                android:text="Nombre Usuario:"
                android:textColor="@color/colorPrimaryText"/>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:inputType="textPersonName"
                android:lineSpacingExtra="-20sp"
                android:text="aa"
                android:textColor="@color/colorSecondaryText"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="14sp" />

        </LinearLayout> <!--NombreUsuario-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad:"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimaryText"/>/>

            <EditText
                android:id="@+id/editText8"
                android:layout_width="24dp"
                android:layout_height="37dp"
                android:inputType="number"
                android:text="17"
                android:textSize="12sp"/>



        </LinearLayout> <!--edad-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especialiad:"
                android:textColor="@color/colorPrimaryText"/>/>

            <Spinner
                android:id="@+id/spnEspecialidad"
                android:layout_width="201dp"
                android:layout_height="30dp"/>

        </LinearLayout> <!--especialidad -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semestre:"
                android:textColor="@color/colorPrimaryText"/>/>


            <Spinner
                android:id="@+id/spnSemestre"
                android:layout_width="201dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout> <!--semestre-->

        <TextView
            android:id="@+id/txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Información Privada"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimaryText"/>/><!--infoPrivada-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/txt7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correo electronico:"
                android:textColor="@color/colorPrimaryText"/>


            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="aa@gmail.com"
                android:textSize="12sp"
                android:textColor="@color/colorSecondaryText"/>
        </LinearLayout><!--Correo-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/txt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No. Control:"
                android:textColor="@color/colorPrimaryText"/>

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/colorSecondaryText"
                android:text="582608**********"
                android:textSize="12sp" />

        </LinearLayout><!--NoControl-->

        <TextView
            android:id="@+id/txt9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cambiar contraseña"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimaryText"/><!--CambiarContra-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/txt10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:text="Contraseña vieja:"
                android:textColor="@color/colorPrimaryText"/>

            <EditText
                android:id="@+id/editText5"
                android:layout_width="251dp"
                android:layout_height="36dp"
                android:ems="10"
                android:inputType="textPassword"
                android:text="4321"
                android:textColor="@color/colorSecondaryText"                />

        </LinearLayout><!--ContraVieja-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contraseña nueva:"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-5dp"
                android:textColor="@color/colorPrimaryText"/>

            <EditText
                android:id="@+id/editText6"
                android:layout_width="251dp"
                android:layout_height="33dp"
                android:ems="10"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorSecondaryText"
                android:inputType="textPassword" />


        </LinearLayout><!--ContraNueva-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmar contraseña nueva:"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimaryText"/>

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginTop="8dp"/>
        </LinearLayout><!--ConfContraNueva-->

 </LinearLayout>

</android.support.constraint.ConstraintLayout>